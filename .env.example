# Application Settings
APP_NAME="Sistem Absensi Guru - SDN Nekas"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost
APP_LOCALE=id
APP_FALLBACK_LOCALE=id

# Log Settings
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=absen_guru
DB_USERNAME=root
DB_PASSWORD=

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@sdnnekas.sch.id"
MAIL_FROM_NAME="${APP_NAME}"

# GPS & Location Settings
SCHOOL_NAME="SDN Nekas"
SCHOOL_ADDRESS="Jl. Raya Kasomalang, Kasomalang Kulon, Kec. Kasomalang, Kabupaten Subang, Jawa Barat 41281"
SCHOOL_LATITUDE=-6.4167
SCHOOL_LONGITUDE=107.7667
GPS_VALIDATION_ENABLED=true
GPS_RADIUS_METERS=200
GPS_STRICT_MODE=false

# Absensi Settings
ABSENSI_MASUK_MULAI=06:00
ABSENSI_MASUK_SELESAI=07:30
ABSENSI_KELUAR_MULAI=13:00
ABSENSI_KELUAR_SELESAI=17:00
TOLERANSI_TERLAMBAT_MENIT=15

# QR Code Settings
QR_CODE_EXPIRE_MINUTES=5
QR_CODE_REFRESH_SECONDS=300

# Notification Settings
NOTIF_EMAIL_ENABLED=true
NOTIF_MISSED_ATTENDANCE=true
NOTIF_IZIN_APPROVED=true
NOTIF_IZIN_REJECTED=true

# File Upload Settings
MAX_UPLOAD_SIZE=2048
ALLOWED_IMAGE_TYPES=jpg,jpeg,png
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# PWA Settings
PWA_ENABLED=true
PWA_MANIFEST_NAME="${APP_NAME}"
PWA_MANIFEST_SHORT_NAME="Absensi Guru"

# Vite
VITE_APP_NAME="${APP_NAME}"
