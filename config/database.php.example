<?php
/**
 * Konfigurasi Database - EXAMPLE FILE
 * Copy file ini ke database.php dan sesuaikan dengan environment Anda
 */

// Database Configuration dengan environment detection
if (ENVIRONMENT === 'development') {
    // Development (Local)
    define('DB_HOST', 'localhost');
    define('DB_NAME', 'absensi_guru');
    define('DB_USER', 'root');
    define('DB_PASS', '');
    define('DB_CHARSET', 'utf8mb4');
} else {
    // Production - baca dari environment variables atau .env file
    define('DB_HOST', getenv('DB_HOST') ?: 'localhost');
    define('DB_NAME', getenv('DB_NAME') ?: 'absensi_guru');
    define('DB_USER', getenv('DB_USER') ?: 'root');
    define('DB_PASS', getenv('DB_PASS') ?: '');
    define('DB_CHARSET', 'utf8mb4');
}

// PDO Options
define('DB_OPTIONS', [
    PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
    PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
    PDO::ATTR_EMULATE_PREPARES => false,
    PDO::MYSQL_ATTR_INIT_COMMAND => "SET NAMES " . DB_CHARSET
]);

/**
 * Get Database Connection
 */
function getDB() {
    static $pdo = null;
    
    if ($pdo === null) {
        try {
            $dsn = "mysql:host=" . DB_HOST . ";dbname=" . DB_NAME . ";charset=" . DB_CHARSET;
            $pdo = new PDO($dsn, DB_USER, DB_PASS, DB_OPTIONS);
        } catch (PDOException $e) {
            if (DEBUG_MODE) {
                die("Koneksi database gagal: " . $e->getMessage());
            } else {
                error_log("Database Error: " . $e->getMessage());
                die("Terjadi kesalahan sistem. Silakan hubungi administrator.");
            }
        }
    }
    
    return $pdo;
}
