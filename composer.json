{
    "name": "absensi-guru",
    "version": "3.5.0",
    "description": "Sistem Absensi Guru - Progressive Web App dengan GPS, QR Code, dan Notifikasi Real-time",
    "type": "project",
    "keywords": [
        "absensi",
        "attendance",
        "pwa",
        "qr-code",
        "gps",
        "teacher",
        "education"
    ],
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "minishlink/web-push": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example\\n'; }\"",
            "@php -r \"if (!file_exists('config/database.php')) { copy('config/database.php.example', 'config/database.php'); echo 'Created config/database.php from example\\n'; }\""
        ],
        "generate-vapid": "php generate-vapid-keys.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
